<resources>

    <!-- Base application theme. -->
    <style name="BloodRaven" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bloodRavenPrimary</item>
        <item name="colorPrimaryDark">@color/bloodRavenPrimaryDark</item>
        <item name="colorAccent">@color/bloodRavenAccent</item>
        <item name="android:opacity">opaque</item>
        <item name="android:colorBackground">@color/bloodRavenPrimaryDark</item>
        <item name="android:textColorPrimary">@color/bloodRavenAccent</item>
        <item name="android:textColorSecondary">@color/bloodRavenAccent</item>
        <item name="android:textColorSecondaryInverse">@color/bloodRavenAccent</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
    </style>
    <style name="Eldar1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/eldar1Primary</item>
        <item name="colorPrimaryDark">@color/eldar1PrimaryDark</item>
        <item name="colorAccent">@color/eldar1Accent</item>
    </style>
    <style name="Eldar2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/eldar2Primary</item>
        <item name="colorPrimaryDark">@color/eldar2PrimaryDark</item>
        <item name="colorAccent">@color/eldar2Accent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashcreen</item>
        <item name="android:colorPrimaryDark">@color/bloodRavenPrimaryDark</item>
    </style>

    <style name="WarHammerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="QuoteTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#000000</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/bloodRavenAccent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
